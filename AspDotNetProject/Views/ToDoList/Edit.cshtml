@model AspDotNetProject.ViewModels.EditTaskViewModel;

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TaskModel.Id" /> 
            <div class="form-group p-2">
                <label asp-for="TaskModel.CategoryId" class="control-label">Category</label>
                <select asp-for="TaskModel.CategoryId" class="form-control">
                    @foreach(var item in Model.Categories){
                        <option value="@item.Id">@item.Text</option>
                    }
                </select>
                <span asp-validation-for="TaskModel.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="TaskModel.Text" class="control-label"></label>
                <input asp-for="TaskModel.Text" class="form-control" />
                <span asp-validation-for="TaskModel.Text" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="TaskModel.DeadLine" class="control-label"></label>
                <input asp-for="TaskModel.DeadLine" class="form-control" />
                <span asp-validation-for="TaskModel.DeadLine" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
